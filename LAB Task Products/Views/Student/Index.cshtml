@model List<LabTaskPractice.Models.Entity.Student>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<table class=" table table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Description</th>
        <th>Action</th>
    
    @foreach(var s in Model)
            {
                <tr>
                    <td> @s.Id</td>
                    <td> @s.Name</td>
                    <td> @s.Price</td>
                    <td> @s.Quantity</td>
                    <td> @s.Description</td>

                    <td>

                        <a href=" @Url.Action("Update",new {s.Name,s.Price,s.Quantity,s.Description})" class="btn btn-danger ">Edit</a>
                        <a href=" @Url.Action("Delete",new {s.Id})" class="btn btn-danger ">Delete</a>
                        <a href=" @Url.Action("AddCart",new {s.Id})" class="btn btn-danger ">Add Cart</a>
                        

                    </td>

                </tr>
                
                
            }
</table>

